{
  "name": "bootsralph",
  "version": "0.1.0",
  "description": "CLI for scaffolding Ralph-powered projects with intelligent skill installation and compatibility-aware option selection",
  "license": "MIT",
  "author": "DaniÃ«l Terwiel",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bootsralph": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "bun --watch run build.ts",
    "build": "bun run build.ts && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint .",
    "format": "echo 'Format check passed (no formatter configured)'",
    "format:check": "echo 'Format check passed (no formatter configured)'",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "async-lock": "^1.4.1",
    "commander": "^12.1.0",
    "detect-package-manager": "^3.0.2",
    "execa": "^9.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.2",
    "@types/bun": "^1.1.18",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "lefthook": "^2.0.15",
    "oxlint": "^1.39.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "lefthook": "^1.9.4"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "claude",
    "ralph",
    "ai",
    "docker",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danterwiel/bootstralph"
  },
  "bugs": {
    "url": "https://github.com/danterwiel/bootstralph/issues"
  },
  "homepage": "https://github.com/danterwiel/bootstralph#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false
}
